    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "runCurrentFile",
            "cwd": "${workspaceFolder}",
            "program": "${fileDirname}/${fileBasename}",
            "runtimeExecutable": "/Users/htz/Library/pnpm/node",
            // "runtimeExecutable": "node",
            "runtimeArgs": [
                "-r",
                "ts-node/register/transpile-only"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ]
        }
    ]
}